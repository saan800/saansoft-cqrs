{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "caseSensitive": false,
  "language": "en-GB",
  "useGitignore": true,
  "dictionaries": [
    "project-dictionary"
  ],
  "ignorePaths": [
    "LICENSE",
    ".gitignore",
    ".editorconfig",
    "./.githooks/**",
    "./.github/dependabot.yml",
    "./.github/workflows/**",
    "./.vscode/**",
    "./dictionary.dic",
    "./Directory.*.props",
    "./Directory.*.targets",
    "**/*.lock.json",
    "**/*.csproj",
    "*.slnx"
  ],
  "dictionaryDefinitions": [
    {
      "name": "project-dictionary",
      "path": "./dictionary.dic",
      "description": "Words used in this project",
      "addWords": true
    }
  ],
}
